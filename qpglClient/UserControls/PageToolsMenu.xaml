<UserControl x:Class="qpglClient.UserControls.PageToolsMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:qpglClient.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="button" Content="查询" Style="{DynamicResource normalBtn}" Foreground="White"/>
        <Button x:Name="button_Copy1" Content="删除" Grid.Column="4" Style="{DynamicResource warnBtn}" Foreground="White"/>
        <Button x:Name="button_Copy2" Content="重置" Grid.Column="3" Style="{DynamicResource errorBtn}" Foreground="White"/>
        <Button x:Name="button_Copy3" Content="保存" Grid.Column="2" Style="{DynamicResource warnBtn}" Foreground="White"/>
        <Button x:Name="button_Copy4" Content="新增" Grid.Column="1" Style="{DynamicResource normalBtn}" Foreground="White"/>

    </Grid>
</UserControl>
